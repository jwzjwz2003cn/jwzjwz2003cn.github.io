.tags
    margin-top rem(30px)
.tag-cloud
        font-size rem(14px)
        color main
        display inline-block
        border 1px solid main
        border-radius rem(5px)
        padding rem(4px) rem(10px)
        margin-right rem(2px)
        margin-bottom rem(8px)
        text-decoration none
        &:hover
            color third
            border 1px solid third

.img-rounded
    border-radius 50%
